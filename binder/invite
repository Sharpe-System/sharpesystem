  <script>
    function buildEmail() {
      const atty = (document.getElementById('attyName').value || '').trim();
      const you = (document.getElementById('yourName').value || '').trim();
      const caseType = (document.getElementById('caseType').value || '').trim();
      const extra = (document.getElementById('note').value || '').trim();

      const greeting = atty ? `Hi ${atty},` : `Hi,`;
      const signoff = you ? `Regards,\n${you}` : `Regards,`;

      const portalLink = `${window.location.origin}/attorney-invite.html`;
      const riskLink = `${window.location.origin}/high-conflict-risk-awareness.html`;

      const oneLine = extra ? `${extra}\n\n` : '';

      const caseLine = caseType ? `Context: ${caseType}.\n\n` : '';

      return `${greeting}

${caseLine}${oneLine}I’m building a small, neutral “procedural orientation” layer called SharpeSystem. The goal is not legal advice — it’s decision support: helping people enter the system confused and leave calibrated, with cleaner facts and fewer avoidable procedural errors.

If you’re open to it, here is a short attorney-facing invite page (proof of concept):
${portalLink}

And here’s the strongest example page (tone + scope boundary):
${riskLink}

If you have 2 minutes, I’d value any reaction: what would make this genuinely useful in attorney intake, and what would be a hard “no.”

${signoff}`;
    }

    function buildShort() {
      const atty = (document.getElementById('attyName').value || '').trim();
      const you = (document.getElementById('yourName').value || '').trim();
      const portalLink = `${window.location.origin}/attorney-invite.html`;
      const greeting = atty ? `Hi ${atty} —` : `Hi —`;
      const sign = you ? `— ${you}` : `—`;

      return `${greeting} I’m building SharpeSystem as neutral procedural orientation (not legal advice). Proof of concept here: ${portalLink} ${sign}`;
    }

    async function copyToClipboard(text) {
      try {
        await navigator.clipboard.writeText(text);
        return true;
      } catch (e) {
        const ta = document.createElement('textarea');
        ta.value = text;
        document.body.appendChild(ta);
        ta.select();
        const ok = document.execCommand('copy');
        document.body.removeChild(ta);
        return ok;
      }
    }

    document.getElementById('copyEmail').addEventListener('click', async () => {
      const ok = await copyToClipboard(buildEmail());
      alert(ok ? 'Email text copied.' : 'Could not copy. Select and copy manually.');
    });

    document.getElementById('copyShort').addEventListener('click', async () => {
      const ok = await copyToClipboard(buildShort());
      alert(ok ? 'Short message copied.' : 'Could not copy. Select and copy manually.');
    });
  </script>
